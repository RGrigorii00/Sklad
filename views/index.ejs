<!DOCTYPE html>
<html lang="ru">
<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    
    <%- include('./partials/header.ejs') %>
    <center>
        <% if (sess.username != undefined) { %>
    <form>
        <div style="width: 50%;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-content: center;
        justify-content: center;
        align-items: center;
        margin: 10px;">
            <div style="margin: 10px;">
                <%- include('./partials/sklad.ejs') %>
            </div>
            <div>
                <button 
                    type="submit" 
                    class="del btn btn-light"
                    formaction="/filter" 
                    formmethod="get" style="border-color: black;">
                    Получить по складу
                </button>
            </div>
        </div>
    </form>
    <form>
        <button 
            type="submit" 
            class="del btn btn-light"
            formaction="/add_task" 
            formmethod="get" style="border-color: black;">
            Добавить задачу
        </button>
    </form>
    <div style="display: flex;
    justify-content: center;
    align-content: center;
    flex-direction: row;
    margin: 10px;">
        <div style="margin: 10px;">
            <form>
                <input 
                    type="radio" 
                    name="sortirovka"
                    value="asc" checked/> Сверху-вниз<br> 

                <input 
                    type="radio" 
                    name="sortirovka"
                    value="desc" class="for-check-input"/> Снизу-вверх<br> 

                <button 
                    type="submit" 
                    class="del btn btn-light"
                    formaction="/sort" 
                    formmethod="get" style="border-color: black;">
                    Отфильтровать
                </button>

                <input 
                    type="hidden" 
                    name="id" /> <br>
            </form>
        </div>
        <div style="margin: 10px;">
            <form>
                <input 
                    type="date" 
                    id="start" 
                    name="date" 
                    value="2024-03-17" 
                    min="1000-07-07" 
                    max="7777-07-07"
                    style="margin: 10px;"/> <br> 

                <button 
                    type="submit" 
                    class="del btn btn-light"
                    formaction="/date_sort" 
                    formmethod="get" style="border-color: black;">
                    Отфильтровать
                </button>
            </form>
        </div>
    </div>
    <form>
        <input 
            type="hidden" 
            id="save" 
            name="save" 
            value="7"  
             />  

        <button 
            type="submit" 
            class="del btn btn-light"
            formaction="/save" 
            formmethod="get" style="border-color: black;">
            Сохранить
        </button>
    </form>
    <% } %>
    </center>
    <br>
    <table class="table table-striped align-middle table-bordered table-success border-dark table1" style="width: 80%;
    text-align: center;">
        <%- include("./partials/thead.ejs", { keys, titles }) %>
        <%- include("./partials/tbody.ejs", { keys, json }) %>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
